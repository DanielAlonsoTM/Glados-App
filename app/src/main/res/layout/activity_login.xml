<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_shapes"
        tools:context=".ui.login.LoginActivity">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <TextView
                android:id="@+id/login_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?actionBarSize"
                android:gravity="center_horizontal"
                android:src="@drawable/icon_bot"
                android:transitionName="nameAppTransition"
                android:text="@string/app_name"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/fonarto_regular"
                android:textSize="64sp"/>
        <LinearLayout
                android:id="@+id/login_content_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_signup_google"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in_google"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:paddingStart="20dp"
                    android:drawableStart="@drawable/googleg_disabled_color_18"
                    android:background="@drawable/button_shape_blue"
                    tools:ignore="RtlSymmetry"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
