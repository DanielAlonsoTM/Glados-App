<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/default_margin">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_blue">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin">
                <TextView
                        android:id="@+id/text_routine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Routine Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/sen_extra_bold"/>
                <TextView
                        android:id="@+id/text_routine_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_routine_name"
                        android:text="Room Name"
                        android:fontFamily="@font/sen_bold"/>
                <TextView
                        android:id="@+id/text_init_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_routine_room_name"
                        android:text="Init Time"
                        android:fontFamily="@font/sen_regular"/>
                <Switch
                        android:id="@+id/switch_button_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/text_routine_name"
                        android:gravity="end"
                        android:theme="@style/SCBSwitch" android:layout_marginStart="99dp"/>
                <TextView
                        android:id="@+id/text_routine_device_name"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:text="Device Name"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="end"
                        android:layout_toEndOf="@id/text_init_time"
                        android:layout_below="@id/text_routine_room_name"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="50dp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
