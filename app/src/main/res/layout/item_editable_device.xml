<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/default_margin"
            android:layout_margin="@dimen/default_margin"
            tools:ignore="MissingConstraints">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                android:background="@drawable/gradient_titanium">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="22sp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_device_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/device_name"
                        android:fontFamily="@font/sen_bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_below="@+id/edit_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:popupBackground="@drawable/gradient_mid_night_city"/>

            <Spinner
                    android:id="@+id/spinner_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner_type"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:popupBackground="@drawable/gradient_mid_night_city"/>

            <Button
                    android:id="@+id/button_device_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner_room"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/gradient_emeral_water"
                    android:hint="@string/save"
                    android:textColorHint="@color/colorWhite"
                    android:fontFamily="@font/fonarto_light"
                    tools:ignore="RelativeOverlap"/>

            <Button
                    android:id="@+id/button_device_delete"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/spinner_room"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/gradient_red"
                    android:hint="@string/delete"
                    android:textColorHint="@color/colorWhite"
                    android:fontFamily="@font/fonarto_light"
                    tools:ignore="RelativeOverlap"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
